class CCards_Actor_SpidersInfested : Inventory
{
	Default
	{
		reactiontime 0;
	}

	override void OnDestroy()
	{
		if(!owner && !done && lastpos != (0,0,0))
		{
			SpawnSpiders();
		}
		Super.OnDestroy();
	}

	bool done;
	Vector3 lastpos;
	int defhp;
	int halfheight;

	override void AttachToOwner(Actor a)
	{
		defhp = a.default.health;
		lastpos = a.pos;
		Super.AttachToOwner(a);
	}

	override void Tick()
	{
		if(!owner)
		{
			Super.Tick();
			return;
		}

		lastpos = owner.pos;

		if(owner.health > 0)
		{
			done = false;
			reactiontime = 0;
		}

		if(owner && GetAge() % 10 == 0 && !done)
		{	
			owner.A_SpawnItemEx("CCards_Actor_InfestationFX", angle:random(0,360), flags:SXF_NOCHECKPOSITION);
		}

		if(owner && owner.health < 1 && reactiontime < 35*2)
		{
			reactiontime++;
		}

		if(!done && owner && reactiontime >= 35*2 && Level.Time % 15 == 0)
		{
			for(int i; i<players.Size(); i++)
			{
				Actor a = players[i].mo;
				if(a && owner.CheckSight(a, SF_IGNOREVISIBILITY) && owner.Distance2D(a) < 128 && a.CountInv("CCards_Actor_InfestationTriggerCooldown") == 0)
				{
					a.GiveInventory("CCards_Actor_InfestationTriggerCooldown", 1);
					SpawnSpiders();
					break;
				}
			}
		}

		Super.Tick();
	}

	void SpawnSpiders()
	{
		uint c = random(1,2);

		if(defhp > 0)
		{
			c += defhp / 400;
		}
		
		Vector3 spawnpos;
		int halfheight;

		if(owner)
		{
			spawnpos = owner.pos;
			halfheight = owner.height/2;
		}
		else
		{
			spawnpos = lastpos;
			halfheight = 16;
		}
		
		for(int i = 0; i<c; i++)
		{
			
			CCards_Actor_Spider spid = CCards_Actor_Spider(Spawn("CCards_Actor_Spider", spawnpos + (0,0,halfheight)));
			if(spid)
			{
				spid.angle = random(0, 360);
				spid.SetStateLabel("SpawnLeap");
			}
		}

		Spawn("CCards_Actor_SpiderBurst", spawnpos + (0,0,halfheight));
		
		done = true;
	}
}

