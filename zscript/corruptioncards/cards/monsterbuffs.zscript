		{
			if(opos != OwnerPos2D() && opos != (0,0) && owner.vel.Length() < 20 && owner.vel.z == 0)
			{
				float amount = 0.45;
				if(owner.bNOGRAVITY)
				{
					amount = 0.10;
				}
				owner.Thrust((opos - OwnerPos2D()).Length() * amount, owner.angle + frandom(-10, 10));
