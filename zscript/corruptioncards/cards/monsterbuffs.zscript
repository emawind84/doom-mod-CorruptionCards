class CCards_Actor_ReverseGravityBuff : Inventory
{
	int fliptics;
	bool started;

	override void ModifyDamage (int damage, Name damageType, out int newdamage, bool passive, Actor inflictor, Actor source, int flags)
	{
		if (owner && passive && damage > 0 && damagetype == "Falling")
		{
			newdamage = 0;
		}
	}

	override void Tick()
	{
		if (!owner)
		{
			Destroy();
			return;
		}

		if(!started)
		{
			if(random(0,1)==0)
			{
				owner.bYFLIP = true;
			}
			owner.bDROPOFF = true;
			started = true;
		}

		//Console.Printf(owner.Threshold .. "");		
		if(owner.health < 1)
		{
			owner.bYFLIP = false;
			Super.Tick();
			return;
		}

		if(owner.Threshold == 0 && (owner.target || owner.bAMBUSH))
		{
			fliptics += random(0, 5);

			if(fliptics >= 35*70)
			{
				if(owner.bYFLIP)
				{
					fliptics = 0;
				}
				else
				{
					fliptics = 20;
				}

				owner.bYFLIP = !owner.bYFLIP;
			}
		}

		if(owner.bYFLIP)
			{
			owner.bNOGRAVITY = true;
			owner.A_ChangeVelocity(0, 0, 2.0, CVF_RELATIVE);
			if(owner.pos.z >= owner.ceilingz - (owner.height + 2) && (Level.Time % 3) == 0 && CCards_ActorTools.IsVisible(owner))
			{
				String tex = TexMan.GetName(owner.cursector.GetTexture(1));
				if(tex == "F_SKY1")
				{
					owner.A_SpawnItemEx("CCards_Actor_GravityFX", random(owner.radius * 0.7, owner.radius), 0, owner.height * 0.9, angle:random(0, 360), flags:SXF_NOCHECKPOSITION);
